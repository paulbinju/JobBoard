                                    <option value="">Select</option>
                                    @foreach (var edu in ViewBag.CompanySize)
                                    {
                                        <option @(ViewBag.CompanySizeID == edu.lm_Id ? "selected" : "") value="@edu.lm_Id">@edu.lm_Value</option>
                                    }
                                </select>
                            </div>
                        </div>

