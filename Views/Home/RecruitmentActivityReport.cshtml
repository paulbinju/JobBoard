<div class="dashboardsection MT30 fade-1">
    <div class="container">
        <div class="row mainrow">
            <div class="col-sm-3">
                <div class="leftpanelsec">
                    <div class="userproimgsec  fade-1">
                        <div class="userimgrec">
                            <a href="#"><img src="@ViewBag.Logo" alt="" style="margin-top:20%" /></a>
                            <div class="userpronamerec"><span>@ViewBag.Company</span>@ViewBag.Name @ViewBag.SurName</div>
                        </div>
                        <div class="usernamegraybg">
                            <div class="uercon">+973 @ViewBag.Phone </div>
                            <div class="uercon">
                                <a href="mailto:@ViewBag.Email">@ViewBag.Email</a>
                                @*<div class="proediticon"><a href="#"><img src="@Url.Content("~/images/white-edit-icon.png")" alt="" /></a></div>*@
                            </div>
                        </div>
                    </div>
                    <div class="dashboardwhiteboxshadow paynowpostjob  fade-2">
                        <div class="paynowjoblist">
                            <ul>
                                <li>User Activity Report<a href="@Url.Content("~/UserActivityReport")" class="editiconcat"><img src="@Url.Content("~/images/gray-edit-icon.png")" alt="" /></a></li>
                                <li>Recruitment Activity Report<a href="@Url.Content("~/RecruitmentActivityReport")" class="editiconcat"><img src="@Url.Content("~/images/gray-edit-icon.png")" alt="" /></a></li>

                            </ul>
                        </div>
                        <div class="postjobntn"> <a href="@Url.Content("~/Packages")" class="greenbgbtn">PACKAGES</a> <a href="@Url.Content("~/PostAJob")" class="redbgbtn">POST A JOB</a> </div>
                    </div>
                    <div class="ingrambox dashboardwhiteboxshadow  fade-1">
                        <!-- InstaWidget -->
                        <a href="https://instawidget.net/v/user/jobs4bahrainis" id="link-b660c32d2a4cc8d4e0535b6a7f91ed8d34c89d205c8a48c58a15aad3f0c1585a">@@jobs4bahrainis</a>
                        <script src="https://instawidget.net/js/instawidget.js?u=b660c32d2a4cc8d4e0535b6a7f91ed8d34c89d205c8a48c58a15aad3f0c1585a&width=250px"></script>
                    </div>
                </div>
            </div>
            <div class="col-sm-9">

                <div class="dashboard-middsec">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="dashboardwhiteboxshadow tabacc-sec ">

                                <h1 class="mainpagetitle Padd15">RECRUITMENT ACTIVITY<span> REPORT</span></h1>
                                
                                <div class="homesearchsection  fade-1">
                                  
                                    <div class="searchformsec">

                                        <div class="row">

                                            <div class="col-md-8">
                                                <b>CREDITS CONSUMPTION</b><br /><br /> 
                                                <table class="col-md-12 " >
                                                    @foreach (var s in ViewBag.Subscription)
                                                    {
                                                        <tr>
                                                            <td><b>Purchased On: </b> @s.PurchaseDate.ToString("dd MMM yyyy")</td>
                                                            <td><b>Package Name:</b> @s.PackageName</td>
                                                            <td><b>Expires On:</b> @s.EndDate.ToString("dd MMM yyyy")</td>
                                                        </tr>
                                                    }
                                                </table>
                                            </div>

                                        </div>
                                        <br /><br />
                                        <div class="row">

                                  <div class="col-md-12">

                                      <b>JOBS YOU MANAGE</b><br />


                                      @{ int itemcount = 0; }
                                      @foreach (var s in ViewBag.Statistics)
                                      {
                                          <div class="col-md-4">
                                              @switch (itemcount)
                                              {
                                                  case 0:
                                                      {
                                                          <div style=" float:left;padding:15px 0 0 6px">Total Jobs : @s</div>
                                                          break;
                                                      }
                                                  case 1:
                                                      {

                                                          <div style=" float:left;padding:15px 0 0 6px">Non-Expired Jobs : @s</div>
                                                          break;
                                                      }
                                                  case 2:
                                                      {
                                                          <div style=" float:left;padding:15px 0 0 6px">Expired Jobs : @s</div>
                                                          break;
                                                      }
                                                  case 3:
                                                      {
                                                          <div style=" float:left;padding:15px 0 0 6px">Non-Deleted Jobs : @s</div>
                                                          break;
                                                      }
                                                  case 4:
                                                      {
                                                          <div style=" float:left;padding:15px 0 0 6px">Deleted Jobs : @s</div>
                                                          break;
                                                      }
                                                  case 5:
                                                      {
                                                          <div style=" float:left;padding:15px 0 0 6px">Total Job Applications : @s</div>
                                                          break;
                                                      }
                                              }




                                          </div>
                                          itemcount++;
                                      }

                                  </div>
                                        </div>




                                    </div>
                                </div>


 

                               
                             
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
