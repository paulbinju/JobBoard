<div class="dashboardsection mainlightgraybg">
    <div class="container">

        <div class="row">

            <div class="col-md-12 fade-1 dashboardwhiteboxshadow" style="padding:0px;">
                <h1 class="mainpagetitle Padd15"><span>FORGOT</span> PASSWORD</h1>
                <br />

                <div class="searchformsec">

                    <div class="col-md-12">
<p>                        Forgotten your password?</p>

                        <p>Reset your Jobs4Bahrainis account password now.</p>

                        <p>Enter the email address for your J4B account and we will email you instructions on how to change your password.</p>

                    </div>
                    <form id="forgotpass" method="post">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label>Email <span>*</span></label>
                                <input type="email" class="form-control" name="email" required />
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label>Select <span>*</span></label>
                                <select class="form-control" name="typez">
                                    <option value="Candidate">Candidate</option>
                                    <option value="Employer">Employer</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group" style="padding:25px 0 0 0">

                                <input name="" type="submit" value="Submit">
                            </div>
                        </div>
                    </form>
                    <br style="clear:both" /><br />
                    <img src="@Url.Content("~/images/loader.gif")" class="pull-right" id="loader" style="width:50px;" />
                    <div class="col-md-12" style="color:red" id="message">
                        
                    </div>
                    <br />
                    <br />
                    <br />
                    <br />

                </div>
            </div>



            <br />
        </div>
    </div>
</div>



@Html.Partial("_partners")

<script>
    $(document).ready(function () {
        $('#loader').hide();
        

        $("#forgotpass").submit(function (e) {
            $('#loader').show();
            e.preventDefault();
            var edudata = new FormData(this);
            $.ajax({
                method: "POST",
                url: "@Url.Content("~/ForgotPasswordChecker")",
                data: edudata,
                contentType: false,
                cache: false,
                processData: false,
                success: function (data) {
                    if (data == "YES") {
                        $('#loader').hide();

                        $('#message').text('Password reset link has been sent to your email!');
                    }
                    else {
                        $('#message').text('Could not find your email in the system, try different email!');
                    }
                },
                error: function () {

                }
            });

        });
    });
</script>




