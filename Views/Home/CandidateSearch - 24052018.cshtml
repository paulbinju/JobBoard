<div class="dashboardsection MT30">
    <div class="container">
        <div class="row mainrow">
 
           <div class="col-md-12">
               <div class="col-sm-12">
                   <div class="dashboardwhiteboxshadow">
                       <div class="col-md-12">
                           <br />
                           <h1 class="mainpagetitle Padd15 centertext">CANDIDATE <span>SEARCH</span></h1>
                           <div class="searchformsec">
                               <div class="row">
                                   <div class="col-md-12">
                                       <input name="Search keywords" type="text" placeholder="Keyword">
                                   </div>
                               </div>
                               <br class="clear" />
                               <div class="row">
                                   <div class="col-md-6">
                                       <input name="fname" type="text" placeholder="First Name">
                                   </div>
                                   <div class="col-md-6">
                                       <input name="lname" type="text" placeholder="Last Name">
                                   </div>

                               </div>

                               <br class="clear" />
                               <div class="row">
                                   <div class="col-md-6">
                                       <input type="text" name="age" placeholder="Age" class="form-control" />
                                   </div>
                                   <div class="col-md-6">
                                       <select name="gender">
                                           <option>Gender</option>
                                           <option value="male">Male</option>
                                           <option value="female">Female</option>
                                       </select>
                                   </div>

                               </div>



                           </div>

                           <div class="col-md-12">




                               <div class="col-md-6">

                                   <div style="font-size:16px;color:#999">Industry / Sector</div>

                                   <div style="height:350px;overflow-y:scroll;background-color:white;border:1px solid #eee;padding:10px; margin-left:-10px ">


                                       @foreach (var s in ViewBag.Sectors)
                                       {
                                           <div class="col-sm-12">
                                               <input type="checkbox" id="chksector" name="chksector" value="@s.SectorID" /> <span style="font-size:15px;color:gray">@s.Sector</span>
                                           </div>
                                       }

                                   </div>
                               </div>
                               <div class="col-md-6">

                                   <div style="font-size:16px;color:#999">Function / Title</div>

                                   <div style="height:350px;overflow-y:scroll;background-color:white;border:1px solid #eee;padding:10px; ">


                                       @foreach (var s in ViewBag.Sectors)
                                       {
                                           <div class="col-sm-12">
                                               <input type="checkbox" id="chksector" name="chksector" value="@s.SectorID" /> <span style="font-size:15px;color:gray">@s.Sector</span>
                                           </div>
                                       }

                                   </div>
                               </div>

                           </div>


                           <br class="clear" />
                           <div class="searchformsec">
                               <div class="row">
                                   <div class="col-md-6">
                                       <select name="Qualification">
                                           <option>Qualification</option>
                                           <option value="HND">Higher National Diploma</option>
                                           <option value="BSC">Bachelor's degree</option>
                                           <option value="MSC">Master's degree</option>
                                           <option value="DOC">Doctoral degree</option>

                                       </select>
                                   </div>
                                   <div class="col-md-6">
                                       <select name="Salary">
                                           <option>Salary</option>
                                           <option value="1">0-200</option>
                                           <option value="2">200-400</option>
                                           <option value="3">400-600</option>
                                           <option value="4">600-800</option>
                                           <option value="5">800-1000</option>.
                                           <option value="6">>1000</option>

                                       </select>
                                   </div>


                               </div>

                               <br class="clear" />

                               <div class="row">
                                   <div class="col-md-6">
                                       <select name="Years of Experience">
                                           <option>Years of Experience</option>
                                           <option value="1">0-1</option>
                                           <option value="2">1-3</option>
                                           <option value="3">3-6</option>
                                           <option value="4">6-8</option>
                                           <option value="5">8-10</option>
                                           <option value="6">>10</option>

                                       </select>
                                   </div>



                               </div>
                           </div>
                           <br class="clear" />

                           <hr />

                           <div class="searchformsec">
                               <div class="row">

                                   <div class="col-md-2 pull-right">
                                       <input name="" type="submit" value="Search">
                                   </div>
                               </div>
                           </div>
                       </div>
                       <br style="clear:both" />
                   </div>
                 
               </div>

           </div>
        </div>
    </div>
</div>
 
