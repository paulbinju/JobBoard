                        <div class="searchformsec">
                            <div class="row">
                                @using (Html.BeginForm("Search", "Home"))
                                {

                                    <div class="col-sm-5">
                                        <input name="keywords" type="text" required placeholder="Search keywords">
                                    </div>
                                    <div class="col-sm-4">
                                        <select name="sector" required>
                                            <option value="0">Sectors</option>
                                            @foreach (var jsc in ViewBag.lstjobsectorcount)
                                            {
                                                <option value="@jsc.SectorID">@jsc.Sector (@jsc.Total)</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-sm-3">
                                        <select name="jobtype" required>
                                            <option value="0">Job type</option>
                                            <option>Any</option>
                                            <option>Permenant</option>
                                            <option>Contract</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-2">
                                        <input name="" type="submit" value="Search">
                                    </div>
                                }
                                <div style="margin-top:8px;"><a href="@Url.Content("~/JobSearch")" class="advsearch">Advanced Search</a></div>
                            </div>
                        </div>
                    </div>
